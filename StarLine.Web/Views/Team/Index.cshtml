@model IEnumerable<StarLine.Core.Models.TeamModel>

@{
    ViewData["Title"] = "Team List";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h5 class="card-title">Teams List</h5>
                <a asp-controller="Team" asp-action="ManageTeam" class="btn btn-sm btn-primary">Add New</a>
            </div>
            <div class="card-body">
                <table id="tblTeamList" class="table table-bordered dataTable" data-url="@Url.Action("Get", "Team")" data-delete="@Url.Action("Delete", "Team")" data-toggleStatus="@Url.Action("ToggleActivation", "Team")">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>Department</th>
                            <th>Team Lead</th>
                            <th>Team Type</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/js/pages/teams.js"></script>