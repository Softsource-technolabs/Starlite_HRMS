@model StarLine.Core.Models.TeamModel

@{
    ViewData["Title"] = "ManageTeam";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="ManageTeam">
            <div class="card">
                <div class="card-header">
                    @if (Model.Id > 0)
                    {
                        <h5 class="card-title">Modify Team Details</h5>
                    }
                    else
                    {
                        <h5 class="card-title">Add New Team</h5>
                    }
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" class="form-control" type="hidden" />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DepartmentId" class="control-label"></label>
                                <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.departments">
                                    <option value="">Select Department</option>
                                </select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TeamType" class="control-label"></label>
                                <select asp-for="TeamType" class="form-select" asp-items="ViewBag.TeamTypes">
                                    <option value="">Select Team Types</option>
                                </select>
                                <span asp-validation-for="TeamType" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        @if (Model.Id > 0)
                        {
                            <input type="submit" value="Update" class="btn btn-sm btn-primary" />
                        }
                        else
                        {
                            <input type="submit" value="Add New" class="btn btn-sm btn-primary" />
                        }
                        <a asp-action="Index" asp-controller="Team" class="btn btn-sm btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
