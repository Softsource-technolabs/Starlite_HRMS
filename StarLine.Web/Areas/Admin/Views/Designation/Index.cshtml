@model IEnumerable<StarLine.Core.Models.DesignationModel>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h5 class="card-title">Designation List</h5>
                <a asp-controller="Designation" asp-action="ManageDesignation" class="btn btn-sm btn-primary">Add New</a>
            </div>
            <div class="card-body">
                <table id="tblDesignationList" class="table table-bordered dataTable" data-url="@Url.Action("GetData", "Designation")" data-delete="@Url.Action("DeleteDesignation", "Designation")" data-toggleStatus="@Url.Action("ToggleActivation", "Designation")">
                    <thead>
                        <tr>
                            <th>Department Name</th>
                            <th>@Html.DisplayNameFor(model => model.DesignationName)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/js/pages/designation.js"></script>