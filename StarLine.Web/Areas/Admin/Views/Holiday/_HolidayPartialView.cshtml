@model StarLine.Core.Models.HolidayModel

<form asp-action="ManageHoliday" id="frmHoliday">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" class="form-control" type="hidden" />
    <div class="row">
        <div class="col-md-12">
            <label asp-for="Name" class="control-label"></label>s
            <div class="form-group">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-12">
            <label asp-for="HolidayDate" class="control-label"></label>
            <div class="form-group">
                <input asp-for="HolidayDate" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="HolidayDate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-12">
            <label asp-for="HolidayType" class="control-label"></label>
            <div class="form-group">
                <select asp-for="HolidayType" class="form-control form-select" asp-items="@Html.GetEnumSelectList<HolidayTypes>()">
                    <option value="" selected="selected">Select Holiday Type</option>
                </select>
                <span asp-validation-for="HolidayType" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mt-2" id="divHolidayTypeOther">
        <div class="col-md-12">
            <label asp-for="HolidayTypename" class="control-label"></label>
            <div class="form-group">
                <input asp-for="HolidayTypename" class="form-control" />
                <span asp-validation-for="HolidayTypename" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-12">
            <label asp-for="Ismandatory" class="control-label"></label>
            <div class="form-group">
                <select asp-for="Ismandatory" class="form-control form-select">
                    <option value="" selected="selected">Select Value</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="Ismandatory" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="form-group">
            @if (Model.Id > 0)
            {
                <input type="submit" value="Update" class="btn btn-primary w-100" />
            }
            else
            {
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            }
        </div>
        <div class="form-group mt-2">
            <button type="button" class="btn btn-danger w-100" data-bs-dismiss="offcanvas" aria-label="Close">Cancel</button>
        </div>
    </div>
</form>
